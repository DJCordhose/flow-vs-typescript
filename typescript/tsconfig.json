{
    "version": "1.8.0",
    "compilerOptions": {
        "target": "es6",
        "module": "es6",
        "isolatedModules": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": true,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "sourceMap": true
    },
  "exclude": [
    "node_modules"
  ]
}
